<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sfrmHome"
            android:textSize="25sp"
            android:textColor="@color/colortext"
            android:gravity="center"
            android:background="@color/barra"/>

        <ImageView
            android:layout_width="229dp"
            android:layout_height="362dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:contentDescription="Mi foto"
            android:src="@drawable/img"
            android:background="@drawable/rounded_shape"
            android:scaleType="centerCrop"
            android:padding="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alumno_nombre"
            android:textSize="20sp"
            android:textColor="@color/micolor"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alumno_materia"
            android:textSize="18sp"
            android:textColor="@color/micolor"
            android:gravity="center"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alumno_carrera"
            android:textSize="18sp"
            android:textColor="@color/micolor"
            android:gravity="center"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</FrameLayout>
